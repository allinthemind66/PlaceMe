<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title></title>
  </head>
  <body>
    <%= form_for @user, url: login_path, method: :post do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.submit "log in" %>
      Or <%= link_to(controller: 'users', action: 'new') { 'sign up' } %>
    <% end %>
  </body>
</html>
